set hls
set smartcase

let mapleader = " "
let g:mapleader = " "

vmap <leader>y "+y
vmap <leader>Y "+Y
vmap <leader>d "+d
vmap <leader>p "+p
vmap <leader>P "+P
nmap <leader>p "+p
nmap <leader>P "+P

nmap <leader>w :w<CR>

" borrowed from vim-unimpaired
nmap <silent> [b :prev<CR>
nmap <silent> ]b :next<CR>
nmap <silent> [B :first<CR>
nmap <silent> ]B :last<CR>

nmap <leader>f :action GotoFile<cr>
nmap <leader>c :action GotoClass<cr>
nmap <leader>m :action GotoSymbol<cr>
nmap <leader>s :action FileStructurePopup<cr>
nmap <leader>d :action ShowErrorDescription<cr>

nmap <C-p> :action SearchEverywhere<cr>

nnoremap <expr> gp '`[' . strpart(getregtype(), 0, 1) . '`]'

